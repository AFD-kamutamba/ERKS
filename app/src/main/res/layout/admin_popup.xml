<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/warning_admin_icon"
        android:id="@+id/item_picture"
        android:layout_weight="2"
        android:layout_gravity="center"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="12"
        android:layout_weight="2">
        <ImageButton
            android:id="@+id/cancel_admin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="cancelAdmin"
            android:text="cancel"
            android:layout_weight="2"
            android:src="@drawable/cancel_admin_popup_icon"
            android:background="@drawable/pay_button_style"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Password :"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20sp"
            android:gravity="left|center_vertical"
            android:layout_weight="7"
            android:id="@+id/admin_password"/>
        <ImageButton
            android:id="@+id/confirm_admin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="confirmAdmin"
            android:text="confirm"
            android:layout_weight="2"
            android:src="@drawable/confirm_admin_popup_icon"
            android:background="@drawable/pay_button_style"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:layout_weight="6">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Q"
                android:onClick="pressedQ"
                android:id="@+id/button_Q"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="W"
                android:onClick="pressedW"
                android:id="@+id/button_W"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="E"
                android:onClick="pressedE"
                android:id="@+id/button_E"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="R"
                android:onClick="pressedR"
                android:id="@+id/button_R"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="T"
                android:onClick="pressedT"
                android:id="@+id/button_T"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Y"
                android:onClick="pressedY"
                android:id="@+id/button_Y"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="U"
                android:onClick="pressedU"
                android:id="@+id/button_U"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="I"
                android:onClick="pressedI"
                android:id="@+id/button_I"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="O"
                android:onClick="pressedO"
                android:id="@+id/button_O"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="P"
                android:onClick="pressedP"
                android:id="@+id/button_P"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="9"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="A"
                android:onClick="pressedA"
                android:id="@+id/button_A"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="S"
                android:onClick="pressedS"
                android:id="@+id/button_S"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="D"
                android:onClick="pressedD"
                android:id="@+id/button_D"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="F"
                android:onClick="pressedF"
                android:id="@+id/button_F"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="G"
                android:onClick="pressedG"
                android:id="@+id/button_G"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="H"
                android:onClick="pressedH"
                android:id="@+id/button_H"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="J"
                android:onClick="pressedJ"
                android:id="@+id/button_J"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="K"
                android:onClick="pressedK"
                android:id="@+id/button_K"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="L"
                android:onClick="pressedL"
                android:id="@+id/button_L"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Z"
                android:onClick="pressedZ"
                android:id="@+id/button_Z"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="X"
                android:onClick="pressedX"
                android:id="@+id/button_X"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C"
                android:onClick="pressedC"
                android:id="@+id/button_C"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="V"
                android:onClick="pressedV"
                android:id="@+id/button_V"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="B"
                android:onClick="pressedB"
                android:id="@+id/button_B"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="N"
                android:onClick="pressedN"
                android:id="@+id/button_N"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="M"
                android:onClick="pressedM"
                android:id="@+id/button_M"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="BACK"
                android:onClick="pressedBackspace"
                android:id="@+id/button_backspace"
                android:layout_weight="3"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>