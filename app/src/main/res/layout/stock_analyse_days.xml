<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Enter the amount of shopping days:"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_weight="1"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_weight="6"
        android:weightSum="28">

        <TextView
            android:id="@+id/shopping_days"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_weight="4"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20dp"
                android:onClick="UserClickedOne"
                android:id="@+id/button_click_one"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="20dp"
                android:onClick="UserClickedTwo"
                android:id="@+id/button_click_two"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="20dp"
                android:onClick="UserClickedThree"
                android:id="@+id/button_click_three"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="20dp"
                android:onClick="UserClickedFour"
                android:id="@+id/button_click_four"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="20dp"
                android:onClick="UserClickedFive"
                android:id="@+id/button_click_five"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="20dp"
                android:onClick="UserClickedSix"
                android:id="@+id/button_click_six"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="20dp"
                android:onClick="UserClickedSeven"
                android:id="@+id/button_click_seven"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="20dp"
                android:onClick="UserClickedEight"
                android:id="@+id/button_click_eight"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="20dp"
                android:onClick="UserClickedNine"
                android:id="@+id/button_click_nine"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20dp"
                android:onClick="UserClickedZero"
                android:id="@+id/button_click_zero"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="70dp"
                android:drawableLeft="@drawable/go_back_arrow"
                android:textSize="20dp"
                android:onClick="UserClickedBack"
                android:id="@+id/button_click_back"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="5"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/days_popup_cancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_weight="2"
            android:background="@drawable/pay_button_style"
            app:srcCompat="@drawable/cancel_admin_popup_icon"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/days_popup_confirm"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/pay_button_style"
            app:srcCompat="@drawable/confirm_admin_popup_icon" />

    </LinearLayout>

</LinearLayout>