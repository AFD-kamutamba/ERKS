<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="afd.ers.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kiosk"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:gravity="center_vertical"
        android:layout_weight="4"
        android:weightSum="4">

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/pay_button_style"
            android:onClick="newSell"
            android:text="Main"
            android:textSize="26dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/pay_button_style"
            android:onClick="newProducts"
            android:text="Add/Remove Products"
            android:textSize="26dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/pay_button_style"
            android:onClick="newBuy"
            android:text="Stock"
            android:textSize="26dp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/pay_button_style"
            android:onClick="newAnalysis"
            android:text="Analysis"
            android:textSize="26dp"/>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:weightSum="4">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/pay_button_style"
                android:onClick="newEmployees"
                android:text="Employees"
                android:textSize="26dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/pay_button_style"
                android:onClick="newExtra"
                android:text="Extra"
                android:textSize="26dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
